<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMainActivity"
    android:background="@color/colorAccent"

    >

    <fragment
        android:id="@+id/button_fragment"
        android:name="com.example.progektfirsttry.fragments.top_button_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/top_button_fragment" />

    <fragment

        android:id="@+id/chubriki"
        android:name="com.example.progektfirsttry.fragments.chubriki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_fragment"
        tools:layout="@layout/chubriki" />
</androidx.constraintlayout.widget.ConstraintLayout>

